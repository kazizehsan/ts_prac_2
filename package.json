  "author": "Kazi Ehsan Aziz <kazizehsan@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node --enable-source-maps dist/app.js",
    "nodemon": "nodemon dist/app.js",
    "build": "rm -rf dist && webpack",
    "build:tsc": "rm -rf dist && tsc",
    "build:watch": "webpack --watch",
    "dev": "npm-run-all -p nodemon build:watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix .",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "keywords": [
    "node",
    "typescript",
    "node.js",
    "boilerplate",
    "express"
  ],
  "devDependencies": {
    "@tsconfig/node18": "^2.0.1",
